root = true

[*]
end_of_line              = lf
charset                  = utf-8
indent_style             = space
indent_size              = 4
trim_trailing_whitespace = true

[*.sln]
end_of_line              = crlf
indent_style             = tab
charset                  = utf-8-bom

[*.cs]
charset                  = utf-8-bom

[*.cs]
